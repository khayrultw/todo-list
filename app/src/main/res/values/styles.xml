<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Todo.EditText" parent="">
        <item name="android:background">@drawable/todo_edit_text_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Todo.Text.Base" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Todo.Title" parent="Todo.Text.Base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Todo.Body" parent="Todo.Text.Base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Todo.Text.Red" parent="Todo.Text.Base">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Todo.Text.Primary" parent="Todo.Text.Base">
        <item name="android:textColor">@color/teal_200</item>
    </style>
</resources>